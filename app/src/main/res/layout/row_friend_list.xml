<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFriend"
        android:layout_width="70dp"
        android:layout_height="100dp"
        tools:src="@drawable/Capi"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivFriend"
        app:layout_constraintTop_toTop="@+id/ivFriend"
        app:layout_constraintBottom_toBottomOf="@+id/ivFriend"
        app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/ivFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Capitan"
            app:layout_constraintStart_toStarttOf="parent"
            app:layout_constraintTop_toTop="parent"
            app:layout_constraintEnd_toEndtOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/ivFriendLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="America"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/ivFriend"
            app:layout_constraintTop_toTop="@+id/ivFriend"
            app:layout_constraintEnd_toEndtOf="@+id/ivFriend"
            app:layout_constraintHorizontal_bias="0"/>










</androidx.constraintlayout.widget.ConstraintLayout>